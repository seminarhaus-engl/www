@import url('https://fonts.googleapis.com/css?family=Roboto&display=swap')

$bannerHeight ?= 12rem

// overwrite default styles here
body
  font-family: "Roboto", sans-serif
  
  .navbar-site-name
    color: #2c3e50 !important

.footer-text
    ul
        list-style: none
    li
        display: inline
        padding-left: 5px

.page-content
    display: flex
    p
        img
            width: 50%


@media (max-width: 500px)
    .footer-text
        ul
            list-style: none
            margin: 0 !important
            padding-left: 0
            text-align: center
        li
            display: block



// import pure and add some styles to it
@import url("https://unpkg.com/purecss@1.0.1/build/pure-min.css")

.pure-form-aligned .pure-control-group .pure-radio
    text-align: left

.pure-button-success,
.pure-button-error,
.pure-button-warning,
.pure-button-secondary {
    color: white
    border-radius: 1rem
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)
}

.pure-button-success {
    background: rgb(28, 184, 65) /* this is a green */
}

.pure-button-error {
    background: rgb(202, 60, 60) /* this is a maroon */
}

.pure-button-warning {
    background: rgb(223, 117, 20) /* this is an orange */
}

.pure-button-secondary {
    background: rgb(66, 184, 221) /* this is a light blue */
}
